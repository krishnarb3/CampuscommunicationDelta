<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/backy">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/header1_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3b5998"
        android:autoText="false"
        android:textSize="10dp"
        android:gravity="center_vertical|right"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/title_2"
        android:textSize="20dp"
        android:background="#3b5998"
        android:text="DIRECTOR"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/header1_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout_2"
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/title_2">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView_2"
            android:divider="@android:color/transparent"
            android:dividerHeight="20px"
            android:smoothScrollbar="true"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout:Yes"
        android:id="@+id/yes1_2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:enabled="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout:No"
        android:id="@+id/no1_2"
        android:layout_alignBottom="@+id/yes1_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:alpha="0"
        android:enabled="false"/>

</RelativeLayout>
