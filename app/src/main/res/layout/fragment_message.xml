<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dev.pro.noob.rb.campuscommunicationdelta.MessageFragment">

    <!-- TODO: Update blank fragment layout -->
    <GridView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:animateLayoutChanges="true"
        android:numColumns="4"
        android:id="@+id/gridview"/>
    <com.melnykov.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:fab_colorNormal="@color/primarycolordark"
        app:fab_colorPressed="@color/primarycolor"
        android:src="@drawable/ic_content_add"
        app:fab_colorRipple="@color/ripple_material_light"/>
    <com.melnykov.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tags_fab"
        android:layout_above="@+id/fab"
        android:visibility="gone"
        android:layout_alignStart="@+id/fab"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:fab_colorNormal="@color/accentcolor"
        app:fab_colorPressed="@color/primarycolor"
        android:src="@drawable/ic_hash"
        app:fab_colorRipple="@color/ripple_material_light"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/tags_list"
        android:isScrollContainer="false"
        android:layout_above="@+id/editText"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/edittext_bg"
        android:inputType="textMultiLine"
        android:ems="10"
        android:textSize="30sp"
        android:isScrollContainer="false"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/fab"
        android:layout_margin="10dp"
        android:layout_toStartOf="@+id/fab"/>

</RelativeLayout>
